                    @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @*@Html.ValidationSummary("", new { @class = "text-danger" })*@


                        if (ViewBag.Success != null && (bool)ViewBag.Success)
                        {
                            <h2 class="text-success">Email sent. Thank you!</h2>
                            @*<script>
                                var timer = setTimeout(function () {
                                    window.location = '/Home/ContactUs'
                                }, 3000);
                            </script>*@

                        }
                        else if (ViewBag.Success != null && !(bool)ViewBag.Success)
                        {
                            <h2 class="text-danger">Ooops , you've forgot something!</h2>
                        }
                        <div class="col-md-8 fade-up">
                            <h3>Drop Us A Message</h3>
                            <br>
                            <br>
                            <div id="message"></div>
                            <form method="post" action="Send" id="contactform">
                                @Html.EditorFor(model => model.FromEmailAddress, new { htmlAttributes = new { @class = "contact", @placeholder = "Your Email Address" } })
                                @Html.ValidationMessageFor(model => model.FromEmailAddress, "", new { @class = "text-danger" })


                                @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "contact", @placeholder = "Subject" } })
                                @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })


                                @Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "comments", @placeholder = "Message" } })
                                @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })

                                <input type="submit" value="Send" class="btn btn-outlined btn-primary" />
                                @*<input class="btn btn-outlined btn-primary" type="submit" name="submit" value="Send">*@


                            </form>
                        </div><!-- col -->

                    }

