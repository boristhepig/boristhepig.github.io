@model MGRescue_System.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html class="fixed">
<head>

    <!-- Basic -->
    <meta charset="UTF-8">

    <meta name="keywords" content="HTML5 Admin Template" />
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/Content/vendors/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/vendors/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Content/vendors/magnific-popup.css" />
    <link rel="stylesheet" href="~/Content/vendors/datepicker3.css" />

    <!-- Theme CSS -->
    @*<link rel="stylesheet" href="~/Content/vendors/assests/theme.css" />*@

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/Content/vendors/assests/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/Content/vendors/assests/theme-custom.css">
    <link href="~/Content/theme.css?version=51" rel="stylesheet" />
    <!-- Head Libs -->
    <script src="~/Content/vendors/assests/modernizr.js"></script>

</head>
<body>
    <a href="/" class="logo pull-left">
        <img src="~/images/logo/SVGLogo (2).png" height="54" alt="MG Rescue System" />HOME
    </a>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">


            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> Sign Up</h2>
                </div>
                <div class="panel-body">
                    <section id="loginForm">
                        @*<form>*@
                        <p style="color:blue; padding-top: 10px; padding-bottom:10px">Start Your Journey Here!</p>
                        <section id="login-form">

                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group mb-none">
                                    <div class="row">
                                        <div class="col-sm-6 mb-sm">
                                            @*<label>First Name</label>*@
                                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @placeholder = "First Name" })
                                        </div>
                                        <div class="col-sm-6 mb-sm">
                                            @*<label>Surname</label>*@
                                            @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", @placeholder = "Surname" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-10 mb-sm">
                                            @Html.ValidationSummary("", new { @class = "text-danger" })
                                            @*<label>Email</label>*@
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                        </div>


                                    </div>
                                    <div class="row">
                                        <div class="col-lg-10 mb-sm">
                                            @*<label>Address</label>*@
                                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @placeholder = "Address" })
                                        </div>
                                        <div class="col-sm-6 mb-sm">
                                            @Html.TextBoxFor(m => m.City, new { @class = "form-control", @placeholder = "City" })
                                        </div>
                                        <div class="col-sm-6 mb-sm">
                                            @Html.TextBoxFor(m => m.County, new { @class = "form-control", @placeholder = "County" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-10 mb-sm">
                                            @*<label>Address</label>*@
                                            @Html.TextBoxFor(m => m.PostCode, new { @class = "form-control", @placeholder = "Post Code" })
                                        </div>
                                        <div class="col-md-10 mb-lg">
                                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Phone Number" })
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6 mb-sm">
                                            @*<label>Address</label>*@
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                                        </div>
                                        <div class="col-sm-6 mb-sm">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "ConfirmPassword" })
                                        </div>
                                    </div>


                                </div>

                                <div class="row">
                                    <div class="col-sm-8">
                                        <div class="checkbox-custom checkbox-default">
                                            <input id="AgreeTerms" name="agreeterms" type="checkbox" />
                                            <label for="AgreeTerms">I agree with <a href="#">terms of use</a></label>
                                        </div>
                                    </div>
                                    <div class="col-sm-4 text-right">
                                        @*<button type="submit" class="btn btn-primary hidden-xs">Sign Up</button>*@
                                        <input type="submit" class="btn btn-primary hidden-xs" value="Register" style="color: white; background-color: blue" />
                                        @*<button type="submit" class="btn btn-primary btn-block btn-lg visible-xs mt-lg">Sign Up</button>*@
                                    </div>
                                </div>

                                <span class="mt-lg mb-lg line-thru text-center text-uppercase">
                                    <span>or</span>
                                </span>
                                <div class="mb-xs text-center">
                                    @Html.Partial("_ExternalLoginsListPartial", new MGRescue_System.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                                    <p class="text-center">Already have an account?</p> <a href="~/Account/Login">Sign In!</a>
                                </div>
                                

                                
                            }
                          
                        </section>
                        @*</form>*@
                    </section>

                </div>
            </div>
            @*<p class="text-center text-muted mt-md mb-md">&copy; Copyright 2018. All rights reserved. Template by <a href="https://colorlib.com">Colorlib</a>.</p>*@
        </div>
    </section>
    <!-- end: page -->
    <!-- Vendor -->
    <script src="~/Content/vendors/assests/jquery.js"></script>
    <script src="~/Content/vendors/assests/jquery.browser.mobile.js"></script>
    <script src="~/Content/vendors/assests/bootstrap.js"></script>
    <script src="~/Content/vendors/assests/nanoscroller.js"></script>
    <script src="~/Content/vendors/assests/bootstrap-datepicker.js"></script>
    <script src="~/Content/vendors/assests/magnific-popup.js"></script>
    <script src="~/Content/vendors/assests/jquery.placeholder.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/Content/vendors/assests/theme.js"></script>

    <!-- Theme Custom -->
    <script src="~/Content/vendors/assests/theme.custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/Content/vendors/assests/theme.init.js"></script>

</body>
</html>





